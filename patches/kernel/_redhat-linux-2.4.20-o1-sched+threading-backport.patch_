+
+	lock_futex_mm();
+
+	if (err < 0)
+		return NULL;
+	/*
+	 * Since the faulting happened with locks released, we have to
+	 * check for races:
+	 */
+	tmp = follow_page(mm, addr, 0);
+	if (tmp != page) {
+		put_page(page);
+		goto repeat_lookup;
+	}

+	struct list_head *head = hash_futex(new_page, q->offset);
+
+	spin_lock(&futex_lock);
+
+	if (!list_empty(&q->list)) {
+		q->page = new_page;
+		list_del(&q->list);
+		list_add_tail(&q->list, head);
+	}

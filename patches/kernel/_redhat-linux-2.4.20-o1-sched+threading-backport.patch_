+	head = hash_futex(page, offset);
+
+	list_for_each_safe(i, next, head) {
+		struct futex_q *this = list_entry(i, struct futex_q, list);
+
+		if (this->page == page && this->offset == offset) {
+			list_del_init(i);
+			__detach_vcache(&this->vcache);
+			tell_waiter(this);
+			ret++;
